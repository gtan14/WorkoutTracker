<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="top|center"
    android:paddingBottom="20dp"
    android:paddingLeft="5dp"
    android:layout_marginBottom="32sp"
    android:id="@+id/rest_row">


    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/minTextInputLayout"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp"
        app:layout_constraintRight_toLeftOf="@+id/deleteRest"
        android:layout_marginRight="8dp">

        <EditText
            android:id="@+id/secondsTV"
            android:layout_width="70dp"
            android:layout_height="44dp"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/seconds"
            android:inputType="number"
            android:maxLength="2"
            android:textAlignment="center"
            android:textColor="@color/seconds" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/colon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/semi_colon"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toLeftOf="@+id/minTextInputLayout"
        android:layout_marginRight="8dp" />

    <ImageButton
        android:contentDescription="@string/delete"
        android:id="@+id/deleteRest"
        android:layout_width="38dp"
        android:layout_height="41dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_delete"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/rest"
        android:layout_width="75dp"
        android:layout_height="44dp"
        android:text="@string/rest"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toRightOf="@+id/reorder"
        android:layout_marginLeft="40dp" />

    <ImageView
        android:id="@+id/reorder"
        android:layout_width="27dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:paddingTop="5dp"
        android:gravity="bottom"
        android:tint="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/reorder"
        android:layout_marginStart="16dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/secTextInputLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/colon"
        android:layout_marginRight="8dp">

        <EditText
            android:id="@+id/minutesTV"
            android:layout_width="70dp"
            android:layout_height="44dp"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/minutes"
            android:inputType="number"
            android:maxLength="2"
            android:textAlignment="center"
            android:textColor="@color/minutes">

        </EditText>
    </android.support.design.widget.TextInputLayout>

</android.support.constraint.ConstraintLayout>